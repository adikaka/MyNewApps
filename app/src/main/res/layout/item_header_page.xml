<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FF785B">


    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/tvTitleHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My News App"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tvSubtitleHeader"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleHeader"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="use the application until you get deep comfort"
        android:textAlignment="center"
        android:textSize="17dp"
        android:textColor="#ffffff"/>

    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitleHeader"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/rounded_alltop_backgroundorange"/>



</androidx.constraintlayout.widget.ConstraintLayout>